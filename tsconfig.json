{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "strictNullChecks": true,
    "keyofStringsOnly": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "typings/*": [
        "util/typing/*"
      ],
      "models/*": [
        "models/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./public/**/*"
  ]
}
