{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["dom"],
    "strictNullChecks": true,
    "keyofStringsOnly": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
